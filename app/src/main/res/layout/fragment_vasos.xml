<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.heartfit.VasosFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Vasos de Agua Consimidos"
            android:textAllCaps="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"/>


        <io.techery.properratingbar.ProperRatingBar
            android:id="@+id/progressBarVasosConsumidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="56sp"
            android:textStyle="bold"
            app:prb_defaultRating="0"
            android:layout_gravity="center_horizontal"
            app:prb_symbolicTick="V"
            app:prb_symbolicTickNormalColor="@android:color/darker_gray"
            app:prb_symbolicTickSelectedColor="@color/colorPrimaryDark"
            app:prb_totalTicks="8"
            />
        <Button
            android:id="@+id/btn_incrementar_vasos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Incrementar"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

</FrameLayout>
